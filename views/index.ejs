<%- include('partials/header.ejs') %>

<%- include('partials/navbar.ejs') %>
<div class="container mt-5 d-flex justify-content-between align-items-center">
  <div>
    <h3 class="heading">User: <span><%= user.firstName %></span></h3>
  </div> <!-- Empty div to create space on the left -->
  <form action="/logout" method="post">
    <button type="submit" class="btn btn-outline-primary">Logout</button>
  </form>
</div>

<div class="container mt-5 mb-5">
  <div class="row">
    <% restaurants.forEach(restaurant => {  %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <form action="/findResturant/<%= restaurant._id %>" method="get">
              <p class="card-text">Restaurant Id: 
                <button class="findButton" type="submit" onmouseover="this.style.color='red';" onmouseout="this.style.color='black'"><%= restaurant.restaurant_id %></button>            
            </p></form>
            <p class="card-text m-0">Borough: <%= restaurant.borough %></p>
            <p class="card-text">Cuisine: <%= restaurant.cuisine %></p>
            <div>        
              <form action="/updateResturant/<%= restaurant._id %>" method="get" class="d-inline">
                  <button class="btn btn-success">Update</button>
              </form>
              <form action="/deleteResturant/<%= restaurant._id %>" method="get" class="d-inline">
                  <button class="btn btn-danger">Delete</button>
              </form>
          </div>

          </div>
        </div>
      </div>
    <% }) %> 
  </div>
</div>

<%- include('partials/footer.ejs') %>
